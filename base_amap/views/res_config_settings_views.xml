<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.amap_server</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="unsplash" position='after'>
                <div class="col-12 col-lg-6 o_setting_box" id="amap_server">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Integrate Amap Server</span>
                        <div class="content-group mt16">
                            <label for="amap_api_key" class="o_light_label"/>
                            <field name="amap_api_key"/>
                        </div>
                        <div>
                            <a href="https://lbs.amap.com/api/webservice/guide/create-project/get-key" class="oe_link" target="_blank">
                                <i class="fa fa-arrow-right"/> Generate an API Key
                            </a>
                            <button name="%(base_amap.action_base_amap_poi_category)d" icon="fa-arrow-right" type="action" string="Manage POI" class="btn-link"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
