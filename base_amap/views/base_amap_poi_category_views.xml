<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_base_amap_poi_category_tree" model="ir.ui.view">
            <field name="name">base.amap.poi_category.tree</field>
            <field name="model">base.amap.poi_category</field>
            <field name="arch" type="xml">
                <tree string="Amap POI Categories" editable="top">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="parent_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_base_amap_poi_category_form" model="ir.ui.view">
            <field name="name">base.amap.poi_category.form</field>
            <field name="model">base.amap.poi_category</field>
            <field name="arch" type="xml">
                <form string="Amap POI Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                
                            </group>
                            <group>
                                <field name="parent_id"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_base_amap_poi_category_search" model="ir.ui.view">
            <field name="name">base.amap.poi_category.search</field>
            <field name="model">base.amap.poi_category</field>
            <field name="arch" type="xml">
                <search string="Amap POI Category">
                    <field name="name"/>
                    <field name="code"/>
                    <filter name="archive" string="Archive" domain="[('active','=',False)]" help="Show archive categories"/>
                    <group string="Group By">
                        <filter name="parent_id" string="Parent" context="{'group_by': 'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_base_amap_poi_category" model="ir.actions.act_window">
            <field name="name">Amap POI Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.amap.poi_category</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_base_amap_poi_category_tree"/>
        </record>

    </data>
</odoo>
